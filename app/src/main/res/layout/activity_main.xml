<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container"
        style="@style/Widget.XMLAlg.AlgorithmContainer"
        android:orientation="vertical">

        <!-- Reverse a String -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_reverse"
            style="@style/TextAppearance.XMLAlg.AlgorithmTitle"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etReverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/hint_reverse"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnReverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvReverseOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            tools:text="olleh" />

        <!-- Factorial -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_factorial"
            style="@style/TextAppearance.XMLAlg.AlgorithmTitle"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etFactorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/hint_factorial"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnFactorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvFactorialOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="120" />

        <!-- Palindrome -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_palindrome"
            style="@style/TextAppearance.XMLAlg.AlgorithmTitle"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etPalindrome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/hint_palindrome"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnPalindrome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvPalindromeOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="Yes, it's a palindrome!" />

        <!-- Find Max CSV -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_max_csv"
            style="@style/TextAppearance.XMLAlg.AlgorithmTitle"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etMaxCsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/hint_max_csv"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnMaxCsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvMaxCsvOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="9" />

        <!-- Count Vowels -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_vowels"
            style="@style/TextAppearance.XMLAlg.AlgorithmTitle"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etVowels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/hint_vowels"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnVowels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvVowelsOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="3" />

        <!-- Fibonacci nth -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_fibonacci"
            style="@style/TextAppearance.XMLAlg.AlgorithmTitle"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etFib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/hint_fibonacci"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnFib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvFibOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="8" />

        <!-- Sum 1..N -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_sum_to_n"
            style="@style/TextAppearance.XMLAlg.AlgorithmTitle"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etSumToN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/hint_sum_to_n"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnSumToN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvSumToNOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="55" />

        <!-- Even or Odd -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_even_odd"
            style="@style/TextAppearance.XMLAlg.AlgorithmTitle"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etEvenOdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/hint_even_odd"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnEvenOdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvEvenOddOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            tools:text="Even" />

    </LinearLayout>
</ScrollView>
