<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Reverse a String -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hello">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etReverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnReverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run" />

        <TextView
            android:id="@+id/tvReverseOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            tools:text="olleh" />

        <!-- Factorial -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFactorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnFactorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run" />

        <TextView
            android:id="@+id/tvFactorialOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="120" />

        <!-- Palindrome -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Race car">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPalindrome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnPalindrome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run" />

        <TextView
            android:id="@+id/tvPalindromeOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="Yes, it's a palindrome!" />

        <!-- Find Max CSV -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="3, 7, 2, 9">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMaxCsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnMaxCsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run" />

        <TextView
            android:id="@+id/tvMaxCsvOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="9" />

        <!-- Count Vowels -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="javascript">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etVowels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnVowels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run" />

        <TextView
            android:id="@+id/tvVowelsOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="3" />

        <!-- Fibonacci nth -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="6">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnFib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run" />

        <TextView
            android:id="@+id/tvFibOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="8" />

        <!-- Sum 1..N -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="10">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSumToN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSumToN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run" />

        <TextView
            android:id="@+id/tvSumToNOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="55" />

        <!-- Even or Odd -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="42">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEvenOdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnEvenOdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run" />

        <TextView
            android:id="@+id/tvEvenOddOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            tools:text="Even" />

    </LinearLayout>
</ScrollView>
