<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Reverse a String -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_reverse"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:paddingBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_reverse">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etReverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnReverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvReverseOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            tools:text="olleh" />

        <!-- Factorial -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_factorial"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_factorial">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFactorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnFactorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvFactorialOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="120" />

        <!-- Palindrome -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_palindrome"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_palindrome">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPalindrome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnPalindrome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvPalindromeOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="Yes, it's a palindrome!" />

        <!-- Find Max CSV -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_max_csv"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_max_csv">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMaxCsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnMaxCsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvMaxCsvOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="9" />

        <!-- Count Vowels -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_vowels"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_vowels">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etVowels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnVowels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvVowelsOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="3" />

        <!-- Fibonacci nth -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_fibonacci"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_fibonacci">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnFib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvFibOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="8" />

        <!-- Sum 1..N -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_sum_to_n"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_sum_to_n">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSumToN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSumToN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvSumToNOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            tools:text="55" />

        <!-- Even or Odd -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_even_odd"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_even_odd">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEvenOdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnEvenOdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_run" />

        <TextView
            android:id="@+id/tvEvenOddOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            tools:text="Even" />

    </LinearLayout>
</ScrollView>
