<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Algorithm section container style -->
    <style name="Widget.XMLAlg.AlgorithmContainer" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/algorithm_background</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Title style for each algorithm block -->
    <style name="TextAppearance.XMLAlg.AlgorithmTitle" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Result text style -->
    <style name="TextAppearance.XMLAlg.Result" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_tertiary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
